@model Gestion_paie.Models.Employee

<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card card-primary shadow-sm">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-user-edit"></i> Modifier un Employé</h3>
            </div>

            <form asp-action="Edit" method="post">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="EmployeeNumber"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                            <input asp-for="EmployeeNumber" class="form-control" placeholder="Matricule" readonly />
                        </div>
                        <span asp-validation-for="EmployeeNumber" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="CIN"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            <input asp-for="CIN" class="form-control" placeholder="Carte d'identité" />
                        </div>
                        <span asp-validation-for="CIN" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="LastName" class="form-control" placeholder="Nom" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <input asp-for="FirstName" class="form-control" placeholder="Prénom" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Position"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                <input asp-for="Position" class="form-control" placeholder="Poste" />
                            </div>
                            <span asp-validation-for="Position" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Department"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <input asp-for="Department" class="form-control" placeholder="Département" />
                            </div>
                            <span asp-validation-for="Department" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BaseSalary"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
                            <input asp-for="BaseSalary" class="form-control" placeholder="Salaire de base" />
                        </div>
                        <span asp-validation-for="BaseSalary" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="HireDate"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            <input asp-for="HireDate" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="HireDate" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Status"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user-check"></i></span>
                            <input asp-for="Status" class="form-control" placeholder="Statut" />
                        </div>
                        <span asp-validation-for="Status" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="BankCode"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-university"></i></span>
                                <input asp-for="BankCode" class="form-control" placeholder="Code Banque" />
                            </div>
                            <span asp-validation-for="BankCode" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="CNSSNumber"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card-alt"></i></span>
                                <input asp-for="CNSSNumber" class="form-control" placeholder="N° CNSS" />
                            </div>
                            <span asp-validation-for="CNSSNumber" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BankAccount"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-credit-card"></i></span>
                            <input asp-for="BankAccount" class="form-control" placeholder="N° Compte Bancaire" />
                        </div>
                        <span asp-validation-for="BankAccount" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ContractType"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-file-contract"></i></span>
                            <input asp-for="ContractType" class="form-control" placeholder="Type de contrat" />
                        </div>
                        <span asp-validation-for="ContractType" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="MaritalStatus"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-heart"></i></span>
                            <input asp-for="MaritalStatus" class="form-control" placeholder="Situation familiale" />
                        </div>
                        <span asp-validation-for="MaritalStatus" class="text-danger small"></span>
                    </div>
                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
