@model IEnumerable<Gestion_paie.Models.Employee>

@{
    ViewData["Title"] = "Liste des Employés";
    Layout = "_Layout";
}

<div class="card card-primary mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title m-0">
            <i class="fas fa-users"></i> @ViewData["Title"]
        </h3>
        <div class="card-tools d-flex gap-2">
         
            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                <button type="submit" class="btn btn-sm btn-danger">
                    <i class="fas fa-sign-out-alt"></i> 
                </button>
            </form>
        </div>
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Matricule</th>
                    <th>CIN</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Poste</th>
                    <th>Département</th>
                    <th>Salaire</th>
                    <th>Date Embauche</th>
                    <th>Statut</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td>@emp.EmployeeNumber</td>
                        <td>@emp.CIN</td>
                        <td>@emp.LastName</td>
                        <td>@emp.FirstName</td>
                        <td>@emp.Position</td>
                        <td>@emp.Department</td>
                        <td>@emp.BaseSalary.ToString("C")</td>
                        <td>@emp.HireDate.ToShortDateString()</td>
                        <td>
                            @if (emp.Status?.ToLower() == "actif")
                            {
                                <span class="badge bg-success">Actif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactif</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@emp.Id"
                               class="btn btn-sm btn-warning" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@emp.Id" />
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        onclick="return confirm('Voulez-vous vraiment supprimer cet employé ?');"
                                        title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
