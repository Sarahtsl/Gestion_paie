@model Gestion_paie.Models.Employee

@{
    ViewData["Title"] = "Ajouter un employé";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card card-primary shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title m-0">
                    <i class="fas fa-user-plus"></i> @ViewData["Title"]
                </h3>
             
            </div>

            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                }

                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="UserId"></label>
                                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users">
                                    <option value="">-- Sélectionnez un utilisateur --</option>
                                </select>
                                <span asp-validation-for="UserId" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" placeholder="Prénom" />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" placeholder="Nom" />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BirthDate"></label>
                                <input asp-for="BirthDate" type="date" class="form-control" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="HireDate"></label>
                                <input asp-for="HireDate" type="date" class="form-control" />
                                <span asp-validation-for="HireDate" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CNSSNumber"></label>
                                <input asp-for="CNSSNumber" class="form-control" placeholder="Numéro CNSS" />
                                <span asp-validation-for="CNSSNumber" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CIN"></label>
                                <input asp-for="CIN" class="form-control" placeholder="CIN" />
                                <span asp-validation-for="CIN" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Colonne droite -->
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label asp-for="ContractType"></label>
                                <input asp-for="ContractType" class="form-control" placeholder="Type de contrat" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Position"></label>
                                <input asp-for="Position" class="form-control" placeholder="Poste occupé" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Department"></label>
                                <input asp-for="Department" class="form-control" placeholder="Département" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BaseSalary"></label>
                                <input asp-for="BaseSalary" type="number" step="0.01" class="form-control" placeholder="Salaire de base" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BankAccount"></label>
                                <input asp-for="BankAccount" class="form-control" placeholder="Compte bancaire" />
                                <span asp-validation-for="BankAccount" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="BankCode"></label>
                                <input asp-for="BankCode" class="form-control" placeholder="Code bancaire" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="MaritalStatus"></label>
                                <input asp-for="MaritalStatus" class="form-control" placeholder="État civil" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="DependentsCount"></label>
                                <input asp-for="DependentsCount" type="number" min="0" class="form-control" placeholder="Nombre d'enfants à charge" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Status"></label>
                                <input asp-for="Status" class="form-control" placeholder="Statut" />
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TerminationDate"></label>
                                <input asp-for="TerminationDate" type="date" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-3">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
