@{
    ViewData["Title"] = "Créer une Fiche de Paie";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-11">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title m-0">
                    <i class="fas fa-file-invoice-dollar"></i> @ViewData["Title"]
                </h3>
            </div>

            <div class="card-body">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
                    </div>
                }
                <form asp-action="Create" method="post" id="payrollForm">
                    <table class="table table-bordered align-middle">
                        <tbody>
                            <tr>
                                <th style="width: 25%">Employé</th>
                                <td>
                                    <select name="employeeId" class="form-control" required>
                                        <option value="">-- Sélectionnez un employé --</option>
                                        @foreach (var emp in ViewBag.Employees)
                                        {
                                            <option value="@emp.Id">@emp.FirstName @emp.LastName</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Période</th>
                                <td>
                                    <select name="periodId" class="form-control" required>
                                        <option value="">-- Sélectionnez une période --</option>
                                        @foreach (var period in ViewBag.Periods)
                                        {
                                            <option value="@period.Id">
                                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(period.PeriodMonth) @period.PeriodYear
                                            </option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            <tr>
                                <th>Heures Supplémentaires</th>
                                <td>
                                    <input type="number" step="0.01" class="form-control" name="overtimeHours" value="0" />
                                </td>
                            </tr>
                            <tr>
                                <th>Prime</th>
                                <td>
                                    <input type="number" step="0.01" class="form-control" name="bonusAmount" value="0" />
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <h5 class="mt-4 mb-2">Avantages en nature</h5>
                    <table class="table table-bordered table-sm align-middle" id="benefitsTable">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 30%">
                                    Type
                                    <button type="button" class="btn btn-sm btn-outline-primary ms-2" id="addNewBenefitTypeBtn">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </th>
                                <th style="width: 15%">Valeur (€)</th>
                                <th style="width: 20%">Valeur imposable (€)</th>
                                <th>Description</th>
                                <th style="width: 5%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <select name="benefitTypeIds" class="form-control">
                                        <option value="">-- Sélectionnez --</option>
                                        @foreach (var type in ViewBag.BenefitTypes as List<GestionPaie.Models.BenefitType>)
                                        {
                                            <option value="@type.Id">@type.Name</option>
                                        }
                                    </select>
                                </td>
                                <td><input type="number" step="0.01" name="values" class="form-control" value="0" /></td>
                                <td><input type="number" step="0.01" name="taxableValues" class="form-control" value="0" /></td>
                                <td><input type="text" name="descriptions" class="form-control" /></td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-danger btn-sm remove-row"><i class="fas fa-trash"></i></button>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <button type="button" class="btn btn-outline-primary btn-sm" id="addBenefit">
                        <i class="fas fa-plus"></i> Ajouter un avantage
                    </button>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Annuler
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Générer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="benefitTypeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Ajouter un nouveau type</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Nom de l’avantage</label>
                    <input type="text" class="form-control" id="newBenefitName" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-success" id="saveNewBenefit">Ajouter</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const addBenefitBtn = document.getElementById("addBenefit");
            const addNewBenefitBtn = document.getElementById("addNewBenefitTypeBtn");
            const saveNewBenefitBtn = document.getElementById("saveNewBenefit");
            const newBenefitInput = document.getElementById("newBenefitName");
            const modal = new bootstrap.Modal(document.getElementById('benefitTypeModal'));
            const selectTemplate = document.querySelector("#benefitsTable tbody tr select");

            addBenefitBtn.addEventListener("click", function () {
                const tableBody = document.querySelector("#benefitsTable tbody");
                const newRow = tableBody.rows[0].cloneNode(true);
                newRow.querySelectorAll("input, select").forEach(el => el.value = (el.tagName === "SELECT" ? "" : el.type === "number" ? 0 : ""));
                tableBody.appendChild(newRow);
            });

            document.addEventListener("click", function (e) {
                if (e.target.closest(".remove-row")) {
                    const row = e.target.closest("tr");
                    const tbody = row.closest("tbody");
                    if (tbody.rows.length > 1) row.remove();
                }
            });

            addNewBenefitBtn.addEventListener("click", () => {
                newBenefitInput.value = "";
                modal.show();
            });

            saveNewBenefitBtn.addEventListener("click", () => {
                const name = newBenefitInput.value.trim();
                if (!name) return alert("Veuillez saisir un nom pour l’avantage");

                document.querySelectorAll("#benefitsTable tbody tr select").forEach(select => {
                    const option = document.createElement("option");
                    option.value = "new_" + Date.now();
                    option.text = name;
                    option.selected = true;
                    select.add(option);
                });

                modal.hide();
            });
        });
    </script>
}
