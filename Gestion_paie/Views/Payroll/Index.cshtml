@model IEnumerable<Gestion_paie.Models.Payroll>

@{
    ViewData["Title"] = "Gestion des Fiches de Paie";
    Layout = "_Layout";
}

<div class="card card-primary mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title m-0">
            <i class="fas fa-file-invoice-dollar"></i> @ViewData["Title"]
        </h3>
    </div>

    <div class="card-body">
       
        <form method="get" class="mb-3 d-flex align-items-center">
            <label class="me-2">Sélectionner la période :</label>
            <select name="periodId" class="form-select me-2" style="width: 200px;">
                <option value="">-- Toutes les périodes --</option>
                @foreach (var period in ViewBag.Periods)
                {
                    if (ViewBag.SelectedPeriodId != null && ViewBag.SelectedPeriodId == period.Id)
                    {
                        <option value="@period.Id" selected="selected">
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(period.PeriodMonth) @period.PeriodYear
                        </option>
                    }
                    else
                    {
                        <option value="@period.Id">
                            @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(period.PeriodMonth) @period.PeriodYear
                        </option>
                    }
                }
            </select>
            <button type="submit" class="btn btn-primary">Filtrer</button>
        </form>

        <table class="table table-bordered table-hover text-center mb-0">
            <thead class="table-primary">
                <tr>
                    <th>Employé</th>
                    <th>Période</th>
                    <th>Salaire Brut</th>
                    <th>Salaire Net</th>
                    <th>Statut</th>
                    <th>Date Création</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center">Aucune fiche de paie pour cette période.</td>
                    </tr>
                }
                else
                {
                    @foreach (var payroll in Model)
                    {
                        <tr>
                            <td>@payroll.Employee.FirstName @payroll.Employee.LastName</td>
                            <td>
                                @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(payroll.PayrollPeriod.PeriodMonth)
                                @payroll.PayrollPeriod.PeriodYear
                            </td>
                            <td>@payroll.GrossSalary.ToString("C")</td>
                            <td>@payroll.NetSalary.ToString("C")</td>
                            <td class="d-flex align-items-center justify-content-between">
                                @* Badge état à gauche *@
                                <span class="badge
        @(payroll.Status == Gestion_paie.Models.PayrollStatus.VALIDATED ? "bg-success" :
          payroll.Status == Gestion_paie.Models.PayrollStatus.PAID ? "bg-primary" :
          "bg-warning")">
                                    @payroll.Status
                                </span>

                                @* Boutons actions à droite *@
                                <div class="ms-2">
                                    @if (payroll.Status == Gestion_paie.Models.PayrollStatus.DRAFT)
                                    {
                                        <form asp-action="Validate" asp-route-id="@payroll.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-success btn-validate" title="Valider">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    }
                                    else if (payroll.Status == Gestion_paie.Models.PayrollStatus.VALIDATED)
                                    {
                                        <form asp-action="Pay" asp-route-id="@payroll.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-primary btn-pay" title="Payer">
                                                <i class="fas fa-credit-card"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>

                            <td>@payroll.CreatedAt.ToShortDateString()</td>
                            <td>
                                @if (payroll.Status != Gestion_paie.Models.PayrollStatus.PAID)
                                {
                                    <a asp-action="Edit" asp-route-id="@payroll.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                }

                                <a asp-action="DownloadPdf" asp-route-id="@payroll.Id" class="btn btn-sm btn-primary me-1">
                                    <i class="fas fa-file-pdf"></i>
                                </a>

                                
                                    <form asp-action="Delete" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@payroll.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Voulez-vous vraiment supprimer cette fiche ?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <div class="mt-3 text-end">
            <a asp-controller="Payroll" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Nouvelle Fiche de Paie
            </a>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("click", function (e) {
            if (e.target.closest(".btn-validate")) {
                if (!confirm("Confirmer la validation de cette fiche de paie ?")) e.preventDefault();
            }
            if (e.target.closest(".btn-pay")) {
                if (!confirm("Marquer comme PAYÉ ? Cette action est définitive.")) e.preventDefault();
            }
        });
    </script>
}
