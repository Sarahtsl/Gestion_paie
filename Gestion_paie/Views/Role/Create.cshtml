@model Gestion_paie.Models.Role

@{
    ViewData["Title"] = "Ajouter un Rôle";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card card-primary shadow-sm">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3 class="card-title m-0">
                    <i class="fas fa-plus-circle"></i> @ViewData["Title"]
                </h3>
                
            </div>

            <div class="card-body">
                <form asp-action="Create" method="post">

                    <div class="form-group mb-3">
                        <label asp-for="Name"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Nom du rôle" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Code"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                            <input asp-for="Code" class="form-control" placeholder="Code du rôle" />
                        </div>
                        <span asp-validation-for="Code" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Enregistrer
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
