@model Gestion_paie.Models.Role

@{
    ViewData["Title"] = "Ajouter un Rôle";
    Layout = "_Layout";
}

<div class="card card-primary mt-4 shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title m-0">
            <i class="fas fa-plus-circle"></i> @ViewData["Title"]
        </h3>
        <a asp-action="Index" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>

    <form asp-action="Create" method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" placeholder="Nom du rôle" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Code" class="form-label"></label>
                <input asp-for="Code" class="form-control" placeholder="Code du rôle" />
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>
        </div>

        <div class="card-footer d-flex justify-content-end">
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save"></i> Enregistrer
            </button>
        </div>
    </form>
</div>
