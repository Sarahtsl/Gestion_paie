@model IEnumerable<Gestion_paie.Models.CnssRate>

@{
    ViewData["Title"] = "Gestion des Taux CNSS";
    Layout = "_Layout";
}

<div class="card card-primary mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title m-0">
            <i class="fas fa-percentage"></i> @ViewData["Title"]
        </h3>
      
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>Date d'effet</th>
                    <th>PF</th>
                    <th>AMO</th>
                    <th>AT/MP</th>
                    <th>Retraite</th>
                    <th>Patronale PF</th>
                    <th>Patronale AMO</th>
                    <th>Patronale AT/MP</th>
                    <th>Patronale Retraite</th>
                    <th>Statut</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EffectiveDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.FamilyAllowanceRate</td>
                        <td>@item.AmoRate</td>
                        <td>@item.AccidentRate</td>
                        <td>@item.RetirementRate</td>
                        <td>@item.EmployerFamilyRate</td>
                        <td>@item.EmployerAmoRate</td>
                        <td>@item.EmployerAccidentRate</td>
                        <td>@item.EmployerRetirementRate</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Actif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactif</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary me-1" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline"
                                  onsubmit="return confirm('Voulez-vous vraiment supprimer ce taux CNSS ?');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
