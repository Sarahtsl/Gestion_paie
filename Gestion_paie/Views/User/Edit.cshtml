@model Gestion_paie.Models.User
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Modifier l’utilisateur";
    Layout = "_Layout";
}

<div class="card card-primary mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title m-0">
            <i class="fas fa-user-edit"></i> @ViewData["Title"]
        </h3>
        <div>
            <a asp-action="Index" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RoleId" class="form-label">Rôle</label>
                <select asp-for="RoleId" asp-items="@(new SelectList(ViewBag.Roles, "Id", "Name"))"
                        class="form-select" autocomplete="off"></select>
                <span asp-validation-for="RoleId" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="fas fa-times"></i> Annuler
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
