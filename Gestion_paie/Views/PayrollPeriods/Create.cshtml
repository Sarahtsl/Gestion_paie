@model Gestion_paie.Models.PayrollPeriod
@{
    ViewData["Title"] = "Créer une période de paie";
}

<div class="row">
    <div class="col-md-8">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Nouvelle période de paie</h3>
            </div>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="card-body">

                    @* résumé des erreurs *@
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="form-group">
                        <label asp-for="CompanyId"></label>
                        <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-control">
                            <option value="">-- Sélectionner une société --</option>
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="PeriodYear"></label>
                            <input asp-for="PeriodYear" class="form-control" placeholder="Ex: 2025" />
                            <span asp-validation-for="PeriodYear" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="PeriodMonth"></label>
                            <input asp-for="PeriodMonth" class="form-control" placeholder="1 à 12" />
                            <span asp-validation-for="PeriodMonth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="StartDate"></label>
                            <div class="input-group">
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                            </div>
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="EndDate"></label>
                            <div class="input-group">
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                                </div>
                            </div>
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label asp-for="Status"></label>
                            <select asp-for="Status"
                                    asp-items="Html.GetEnumSelectList<Gestion_paie.Models.PayrollPeriodStatus>()"
                                    class="form-control">
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group col-md-6">
                            <label asp-for="ProcessedAt"></label>
                            <div class="input-group">
                                <input asp-for="ProcessedAt" type="datetime-local" class="form-control" />
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="far fa-clock"></i></span>
                                </div>
                            </div>
                            <small class="form-text text-muted">Laisser vide si non traité.</small>
                            <span asp-validation-for="ProcessedAt" class="text-danger"></span>
                        </div>
                    </div>

                    @* CreatedAt est géré par la DB (DEFAULT GETDATE) : pas de champ ici *@
                </div>

                <div class="card-footer d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
