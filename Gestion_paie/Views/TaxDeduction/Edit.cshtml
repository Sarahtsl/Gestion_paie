@model Gestion_paie.Models.TaxDeduction

@{
    ViewData["Title"] = "Modifier une déduction fiscale";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card card-primary shadow-sm">
            <div class="card-header">
                <h3 class="card-title m-0">
                    <i class="fas fa-edit"></i> @ViewData["Title"]
                </h3>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="card-body">

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-tag"></i></span>
                            <input asp-for="Name" class="form-control" placeholder="Nom de la déduction" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DeductionType" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-list"></i></span>
                            <select asp-for="DeductionType" class="form-select">
                                <option value="">-- Sélectionnez un type --</option>
                                <option value="personal" selected="@(Model.DeductionType == "personal")">Personnel</option>
                                <option value="dependent" selected="@(Model.DeductionType == "dependent")">Dépendant</option>
                                <option value="professional" selected="@(Model.DeductionType == "professional")">Professionnel</option>
                            </select>
                        </div>
                        <span asp-validation-for="DeductionType" class="text-danger small"></span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="Amount" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
                                <input asp-for="Amount" class="form-control" type="number" step="0.01" placeholder="Montant fixe" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Percentage" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-percent"></i></span>
                                <input asp-for="Percentage" class="form-control" type="number" step="0.0001" placeholder="Valeur entre 0 et 1" />
                            </div>
                            <span asp-validation-for="Percentage" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MaxAmount" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-arrow-up"></i></span>
                                <input asp-for="MaxAmount" class="form-control" type="number" step="0.01" placeholder="Montant maximum" />
                            </div>
                            <span asp-validation-for="MaxAmount" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EffectiveDate" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="EffectiveDate" class="form-control" type="date" />
                            </div>
                            <span asp-validation-for="EffectiveDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input" checked />
                        <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                    </div>

                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
