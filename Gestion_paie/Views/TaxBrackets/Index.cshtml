@model IEnumerable<Gestion_paie.Models.TaxBracket>

@{
    ViewData["Title"] = "Gestion des Tranches d'Impôt";
    Layout = "_Layout";
}
<div class="d-flex justify-content-end mt-3 mb-3">
    <a asp-controller="TaxBrackets" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Ajouter TAX
    </a>
</div>

<div class="card card-primary mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title m-0">
            @ViewData["Title"]
        </h3>
   
    </div>

    <div class="card-body p-0">
        <table class="table table-bordered table-striped table-hover mb-0">
            <thead>
                <tr>
                    <th>Date d'effet</th>
                    <th>Montant Min</th>
                    <th>Montant Max</th>
                    <th>Taux d'imposition (%)</th>
                    <th>Montant fixe</th>
                    <th>Statut</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.EffectiveDate.ToString("dd/MM/yyyy")</td>
                        <td>@item.MinAmount</td>
                        <td>@item.MaxAmount</td>
                        <td>@item.TaxRate</td>
                        <td>@item.FixedAmount</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="badge bg-success">Actif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactif</span>
                            }
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id"
                               class="btn btn-sm btn-primary me-1" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Voulez-vous vraiment supprimer cette tranche ?');">
                                <button type="submit"
                                        class="btn btn-sm btn-danger"
                                        title="Supprimer">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

