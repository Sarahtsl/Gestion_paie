@model Gestion_paie.Models.TaxBracket

@{
    ViewData["Title"] = "Modifier une Tranche d'Impôt";
    Layout = "_Layout";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-10">
        <div class="card card-primary shadow-sm">
            <div class="card-header">
                <h3 class="card-title m-0">
                    <i class="fas fa-edit"></i> @ViewData["Title"]
                </h3>
            </div>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="card-body">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="EffectiveDate" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="EffectiveDate" class="form-control" type="date" />
                            </div>
                            <span asp-validation-for="EffectiveDate" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="TaxRate" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-percent"></i></span>
                                <input asp-for="TaxRate" class="form-control" type="number" step="0.0001" min="0" max="100" placeholder="Ex: 15.2500" />
                            </div>
                            <span asp-validation-for="TaxRate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="MinAmount" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-arrow-down"></i></span>
                                <input asp-for="MinAmount" class="form-control" type="number" step="0.01" min="0" placeholder="Montant minimum" />
                            </div>
                            <span asp-validation-for="MinAmount" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="MaxAmount" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-arrow-up"></i></span>
                                <input asp-for="MaxAmount" class="form-control" type="number" step="0.01" min="0" placeholder="Montant maximum" />
                            </div>
                            <span asp-validation-for="MaxAmount" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="FixedAmount" class="form-label fw-bold"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
                                <input asp-for="FixedAmount" class="form-control" type="number" step="0.01" min="0" placeholder="Montant fixe" />
                            </div>
                            <span asp-validation-for="FixedAmount" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 d-flex align-items-center">
                            <div class="form-check mt-4">
                                <input asp-for="IsActive" class="form-check-input" checked />
                                <label asp-for="IsActive" class="form-check-label fw-bold"></label>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
